<div class="form-size">
  <%= form_for organization, html: {multipart:true} do |f| %>
    <!-- <% if organization.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(organization.errors.count, "error") %> prohibited this organization from being saved:</h2>

        <ul>
        <% organization.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %> -->
    <div class="row form-box">
      <div class="col-md-6">

        <div class="field field-input">
          <%= f.label :name %>
          <%= f.text_field :name, placeholder: "Organization name" %>
          <div class="display-error"><%= display_error_org(:name) %></div>
        </div>

        <div class="field">
          <%= f.label :organization_image %>
          <%= f.file_field :image %>
        </div>

        <div class="field">
          <%= f.label :description %>
          <%= f.text_area :description, placeholder: "Tell us about your organization!" %>
          <div class="display-error"><%= display_error_org(:description) %></div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="field field-input">
          <%= f.label :phone %>
          <%= f.text_field :phone, placeholder: "(555) 555-5555" %>
        </div>

        <div class="field field-input">
          <%= f.label :email %>
          <%= f.text_field :email, placeholder: "organization@email.com" %>
        </div>

        <div class="field field-input">
          <%= f.label :website %>
          <%= f.text_field :website, placeholder: "www.organization.com" %>
        </div>

        <div class="field field-input">
          <%= f.label :facebook %>
          <%= f.text_field :facebook, placeholder: "facebook.com/organization" %>
        </div>

        <div class="field field-input">
          <%= f.label :twitter %>
          <%= f.text_field :twitter, placeholder: "@organization" %>
        </div>



        <br>
        <div class="actions">
          <%= f.submit class: "btn btn-sm btn-primary"%>
        </div>
        
      </div>
    </div> <!-- end row -->
  <% end %>


</div>
