<p id="notice"><%= notice %></p>

<h1>Organizations</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Organization Info</th>
      <th>Organizers</th>
      <th>Contact</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @organizations.each do |organization| %>
      <tr>
        <td>
          <strong><%= link_to organization.name, organization%></strong><br><br>
          <%= organization.description %><br><br>
          <% if @ability.can? :manage, organization %>
            <%= link_to 'Edit', edit_organization_path(organization), class: "btn btn-xs btn-info"%>
            <%= link_to 'Destroy', organization, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" %>
          <% end %>
        </td>
        <td>
          <% organization.users.each do |user| %>
          <%= user.name %><br>
          <% end %>
        </td>
        <td>
          Phone: <%= organization.phone %><br>
          Email: <%= organization.email %><br>
          Web: <%= organization.website %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Organization', new_organization_path, class: "btn btn-sm btn-primary" %>
<% end %>
