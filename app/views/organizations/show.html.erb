
<!-- Title Containger -->
<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <h1>
        <div id="org-name"><%= @organization.name %></div>
      </h1>
    </div>
  </div> <!--end row -->
</div> <!--end title container -->

<hr>

<!-- Info Containger -->
<div class="container-fluid">
  <div class="row section-box">
    <!-- image column -->
    <div class="col-md-6 text-center">
      <div class="large-image-placeholder">
      </div>

    </div>
    <!-- info column -->
    <div class="col-md-6">
      <h5>Description</h5>
      <div class="text-area">
        <p class="description"><%= @organization.description %></p>
      </div>
      <h5>Phone</h5>
      <div class="text-area">
        <p><%= @organization.phone %></p>
      </div>

      <h5>Email</h5>
      <div class="text-area">
        <p><%= @organization.email %></p>
      </div>

      <h5>Website</h5>
      <div class="text-area">
        <p><%= @organization.website %></p>
      </div><br>
    </div>
    <!-- organizers column -->

  </div> <!-- end section -->

</div> <!-- end info container -->
<br>
<div class="container-fluid"> <!-- organier and event container -->
  <div class="row section-box">
    <!-- organizer column -->
    <div class="col-md-6">
      <h5><%= link_to "Organizers" %></h5>
      <p id="organizer-list">
        <% @organization.users.sort.each do |organizer| %>
          <div class="user-box">
            <div class="image-placeholder"></div>
          <%= link_to organizer.name, user_path(organizer) %><br>
          <%= organizer.email %><br></div>
        <% end %>
      </p>
      <% if user_signed_in? %>
        <%= button_to "Join!", organization_add_user_path(@organization.id), class: "btn btn-primary btn-lg"%><br>
      <% end %>
    </div>
    <!-- events column -->
    <div class="col-md-6">
      <h5><%= link_to "Events", events_path %></h5>
      <p id="events-list">
        <% @organization.events.each do |event| %>
          <div class="event-box">
            <!-- <div class="image-placeholder"></div> -->
          <p><%= link_to event.name, event_path(event) %><br>
          <%= event.description %><br>
          <%= event.start_time.strftime("%b %e, %Y ") %><br>
          <%= event.start_time.strftime("%l:%M %p") %> - <%= event.end_time.strftime("%l:%M %p") %></p>
          </div><br>
        <% end %>
      </p>
    </div>
  </div>
</div> <!-- end organizer and event container -->

<br>

<% if @ability.can? :manage, @organization %>
  <%= link_to 'Edit', edit_organization_path(@organization), class: "btn btn-sm btn-info"%>
  <%= link_to 'Destroy', @organization, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %>
<% end %>

