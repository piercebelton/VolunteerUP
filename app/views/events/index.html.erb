<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Cause</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Street</th>
      <th>City</th>
      <th>State</th>
      <th>Postal code</th>
      <th>Country</th>
      <th>Volunteers needed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= link_to event.name, event %></td>
        <td><%= event.description %></td>
        <td><%= event.cause %></td>
        <td><%= event.start_time.strftime("%b %e, %Y %l:%M %p") %></td>
        <td><%= event.end_time.strftime("%b %e, %Y %l:%M %p") %></td>
        <td><%= event.street %></td>
        <td><%= event.city %></td>
        <td><%= event.state %></td>
        <td><%= event.postal_code %></td>
        <td><%= event.country %></td>
        <td><%= event.volunteers_needed %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

