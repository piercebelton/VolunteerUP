<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Cause</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Street</th>
      <th>City</th>
      <th>State</th>
      <th>Postal code</th>
      <th>Conutry</th>
      <th>Volunteers needed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.description %></td>
        <td><%= event.cause %></td>
        <td><%= event.start_time %></td>
        <td><%= event.end_time %></td>
        <td><%= event.street %></td>
        <td><%= event.city %></td>
        <td><%= event.state %></td>
        <td><%= event.postal_code %></td>
        <td><%= event.conutry %></td>
        <td><%= event.volunteers_needed %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

