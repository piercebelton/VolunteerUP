<h1>Hi <%= @user.name %>!</h1>
<br>
<div class="user-info">
  <ul>
    <li>Email: <%= @user.email %></li>
    <li>Location: <%= @user.city + ' ' + @user.state %></li>
  </ul>
</div>
<br>
<p>
<%= link_to 'Account Settings', edit_user_registration_path, class: "btn btn-xs btn-info" %> |
<%= link_to 'Home', root_path, class: "btn btn-xs btn-info" %>
</p>
<br>
<h2>Your Upcoming Events</h2>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Cause</th>
      <th>Address</th>
      <th>Start Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_events.each do |event| %>
      <tr>
        <td><%= Event.find(event.event_id).name %></td>
        <td><%= Event.find(event.event_id).description %></td>
        <td><%= Event.find(event.event_id).cause %></td>
        <td><%= Event.find(event.event_id).address %></td>
        <td><%= Event.find(event.event_id).start_time %></td>
      </tr>
    <% end %>
  </tbody>
</table>
