<h1>Hi <%= @user.name %>!</h1>
<br>
<div class="user-info">
  <ul>
    <li>Email: <%= @user.email %></li>
    <li>Location: <%= @user.city + ' ' + @user.state %></li>
  </ul>
</div>
<br>
<p>
<%= link_to 'Account Settings', edit_user_registration_path, class: "btn btn-xs btn-info" %> |
<%= link_to 'Home', root_path, class: "btn btn-xs btn-info" %>
</p>
<br>
<h2>Your Upcoming Events</h2>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Cause</th>
      <th>Address</th>
      <th>Start Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.description %></td>
        <td><%= event.cause %></td>
        <td><%= event.address %></td>
        <td><%= event.start_time %></td>
        <td><%= link_to "Cancel Your RSVP",
          user_remove_event_path(current_user.id) + "?event=" +
          event.id.to_s, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
